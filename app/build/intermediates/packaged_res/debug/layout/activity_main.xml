<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo3"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!-- Titulo -->

    <!-- Barra de Búsqueda -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="72dp"
        android:layout_y="22dp"
        android:text="Weather of Three Cities"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="84dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the name of the city" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Primer Layout -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGPS"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_x="294dp"
        android:layout_y="194dp"
        android:text="GPS"
        app:strokeWidth="2px"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        />

    <AbsoluteLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="16dp"
        android:layout_y="300dp"
        android:background="#99141414">

        <Button
            android:id="@+id/bloque1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:background="@android:color/transparent"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCiudadNombre1"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/idCiudadTemperatura1"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="36°"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/idCiudadClima1"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Soleado"

                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imagenClima1"
                android:layout_width="70dp"
                android:layout_height="70dp"></ImageView>
        </LinearLayout>
    </AbsoluteLayout>


    <!-- Segundo Layout -->

    <AbsoluteLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="16dp"
        android:layout_y="400dp"
        android:background="#66ffffff">

        <Button
            android:id="@+id/bloque2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:layout_y="-2dp"


            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCiudadNombre2"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idCiudadTemperatura2"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="36°"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idCiudadClima2"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Soleado"

                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageClima2"
                android:layout_width="70dp"
                android:layout_height="70dp"></ImageView>
        </LinearLayout>
    </AbsoluteLayout>


    <!-- Tercer Layout -->

    <AbsoluteLayout
        android:background="#99141414"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_x="16dp"
        android:layout_y="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <Button
            android:id="@+id/bloque3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:gravity="center"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCiudadNombre3"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/idCiudadTemperatura3"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="36°"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/idCiudadClima3"
                android:layout_width="72dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Soleado"

                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageClima3"
                android:layout_width="70dp"
                android:layout_height="70dp"></ImageView>
        </LinearLayout>
    </AbsoluteLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_x="293dp"
        android:layout_y="84dp"
        android:maxWidth="42dp"
        android:maxHeight="61dp"
        android:text="Search"
        android:textSize="10dp"
        app:icon="@drawable/lupa"
        app:iconGravity="end"
        app:iconSize="20dp"
        app:iconTint="@null"
        app:strokeWidth="2px"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"


        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="214dp"
        android:clickable="true"
        android:text="To use the GPS press the following button"
        android:textColor="@color/black" />

</AbsoluteLayout>